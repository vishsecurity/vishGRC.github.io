{
  "name": "grc-suite-portable",
  "version": "1.0.0",
  "description": "GRC Suite - Portable Edition: Comprehensive offline-capable Governance, Risk, and Compliance platform",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "node --watch index.js",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "echo 'Backend build complete'",
    "docker:build": "docker build -t grc-suite:latest .",
    "docker:run": "docker run -d -p 8080:8080 -v $(pwd)/data:/app/data -v $(pwd)/backups:/app/backups --name grc-suite grc-suite:latest",
    "docker:stop": "docker stop grc-suite && docker rm grc-suite",
    "docker:compose": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f",
    "test": "echo 'Tests not yet implemented'",
    "lint": "eslint .",
    "backup": "node scripts/backup.js",
    "restore": "node scripts/restore.js"
  },
  "keywords": [
    "grc",
    "governance",
    "risk",
    "compliance",
    "vapt",
    "vendor-risk",
    "iso27001",
    "gdpr",
    "privacy",
    "security",
    "audit",
    "offline",
    "portable"
  ],
  "author": "GRC Suite Team",
  "license": "PROPRIETARY",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "sqlite3": "^5.1.6",
    "better-sqlite3": "^9.2.2",
    "multer": "^1.4.5-lts.1",
    "xlsx": "^0.18.5",
    "pdfkit": "^0.13.0",
    "node-cron": "^3.0.3",
    "winston": "^3.11.0",
    "joi": "^17.11.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "eslint": "^8.56.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/grcsuite/portable"
  },
  "bugs": {
    "url": "https://github.com/grcsuite/portable/issues"
  },
  "homepage": "https://grcsuite.com"
}
